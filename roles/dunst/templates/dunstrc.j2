[global]
    ### Display ###
    monitor = 0
    geometry = "330-15+49"
    indicate_hidden = yes
    shrink = no
    transparency = 12
    notification_height = 100
    separator_height = 2
    padding = 6
    horizontal_padding = 6
    frame_width = 0
    separator_color = auto
    sort = no
    idle_threshold = 0

    ### Text ###
    font = Iosevka Term 12
    line_height = 3
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    show_age_threshold = -1
    word_wrap = yes
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 80
    icon_path = /usr/share/pixmaps/:/usr/share/icons/Papirus-Dark/16x16/actions/:/usr/share/icons/Papirus-Dark/16x16/apps/:/usr/share/icons/Papirus-Dark/16x16/categories/:/usr/share/icons/Papirus-Dark/16x16/devices/:/usr/share/icons/Papirus-Dark/16x16/emblems/:/usr/share/icons/Papirus-Dark/16x16/extra/:/usr/share/icons/Papirus-Dark/16x16/mimetypes/:/usr/share/icons/Papirus-Dark/16x16/panel/:/usr/share/icons/Papirus-Dark/16x16/places/:/usr/share/icons/Papirus-Dark/16x16/status/

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -dmenu
    browser = /usr/bin/{{ browser }}
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false

    ### Legacy
    force_xinerama = false

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+period
    context = ctrl+shift+period

[urgency_low]
    frame_color = "#3B7C87"
    foreground = "#FFFFFF"
    background = "#000000"
    timeout = 7

[urgency_normal]
    frame_color = "#5B8234"
    foreground = "#FFFFFF"
    background = "#000000"
    timeout = 7

[urgency_critical]
    frame_color = "#B7472A"
    foreground = "#B7472A"
    background = "#191311"
    timeout = 7

[keep-transient]
    match_transient = true
    history_ignore = false
