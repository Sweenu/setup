export XDG_DESKTOP_DIR={{ defaults.desktop_dir|replace(ansible_user_dir, '$HOME') }}
export XDG_DOCUMENTS_DIR={{ defaults.documents_dir|replace(ansible_user_dir, '$HOME') }}
export XDG_DOWNLOAD_DIR={{ defaults.download_dir|replace(ansible_user_dir, '$HOME') }}
export XDG_MUSIC_DIR={{ defaults.music_dir|replace(ansible_user_dir, '$HOME') }}
export XDG_PICTURES_DIR={{ defaults.pictures_dir|replace(ansible_user_dir, '$HOME') }}
