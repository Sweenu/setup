### Package Managers ###
pac yaourt
paci yaourt -S
pacs yaourt -Ss
pacu yaourt -Syu
# list packages belonging to a group
pacsg yaourt -Sg
# remove packages fully as well as any dependency not required by other packages
pacr yaourt -Rns
# detailed info on package, installed (Q) or not (S)
pacqi yaourt -Qi
pacsi yaourt -Si
# query the package that owns <file>
pacqo yaourt -Qo
# list files belonging to a package
pacql yaourt -Qlq
# list explicitly installed packages not required as dependencies
pacqet yaourt -Qet
# sync the files database and search for a package containing a file
pacfs yaourt -Fy; yaourt -Fs

### VCS ###
g git
gco git checkout
gs git status --short
gS git status
gst git stash
gstp git stash pop
gstl git stash list
grc git rebase --continue
gri git rebase --interactive
gra git rebase --abort
grs git rebase --skip
gp git push
gb git branch
gc git commit
ga git add
gd git diff
gds git diff --staged
gamend git commit --amend

